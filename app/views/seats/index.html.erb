<div class="row display-page" style="margin-top: 100px">
  <div class="container">
  <h2 style="text-align:center">选择座位</h2>
	<%  count = 0 %>
	<% @seats.each do |seat| %>
	<% if count == 0 %>
	<div class="row" style="margin-top: 200px">
		<% end %>
		<% count+=1 %>

		<%= render partial: "seat_item", locals: { seat:seat} %>

		<% if count == 8 || seat == @seats.last%>
	</div>
	<% count = 0 %>
	<% end %>
	<% end %>
</div>
</div>
