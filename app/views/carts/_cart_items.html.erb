<tr>
	<td id="item-img-td"><%= show_cart_items_image(cart_item.product)  %></td>
	<td class= 'align-middle text-center' ><%= link_to(cart_item.product.title,product_path(cart_item.product)) %></td>
	<td class="text-center"> <%= number_to_currency(cart_item.product.price,:unit=>'$')%></td>
	<td class="text-center">
	
		<% cart_item = current_cart.cart_items.find_by(product_id: cart_item.product_id) %>

		<%= form_for cart_item,url: cart_item_path(cart_item.product) do |f| %>

		<div class="input-group number-spinner">
			<span class="input-group-btn">
				<button class="btn btn-default" type="submit" name="sub" value="1"><span class="glyphicon glyphicon-minus"></span></button>
			</span>
			<%= f.number_field :quantity,class:"form-control text-center",:readonly => true  %>
			<span class="input-group-btn">
				<button class="btn btn-default" type="submit"  name="add" value="1"><span class="glyphicon glyphicon-plus"></span></button>
			</span>
		</div>
		<% end %>
		
	</td>
	<td class="text-center"><%= number_to_currency(cart_item.quantity * cart_item.product.price,:unit=>'$ ') %></td>
	<td>
		<%= button_to cart_item_path(cart_item.product),class:'close pull-left',method: :delete do%>
		Ã—
		<% end %>
	</td>	
	</td>
</tr>