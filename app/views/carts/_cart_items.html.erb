<tr>
	<td id="item-img-td"><%= show_cart_items_image(cart_item.product)  %></td>
	<td class= 'align-middle'><%= link_to(cart_item.product.title,product_path(cart_item.product)) %></td>
	<td> <%= number_to_currency(cart_item.product.price,:unit=>'$ ')%></td>
	<td>
		<% cart_item = current_cart.cart_items.find_by(product_id: cart_item.product_id) %>
		
		<%= form_for cart_item,url: cart_item_path(cart_item.product) do |f| %>
		<%= f.select(:quantity, 1..cart_item.product.quantity,{},{:class=>"selectpicker"}) %>
		<%= f.submit "Update", :disable_with => 'Submiting...' %>
		<% end %>
	</td>
	<td><%= number_to_currency(cart_item.quantity * cart_item.product.price,:unit=>'$ ') %></td>
	<td>
		<%= button_to cart_item_path(cart_item.product),class:'close pull-left',method: :delete do%>
		Ã—
		<% end %>
	</td>
</tr>