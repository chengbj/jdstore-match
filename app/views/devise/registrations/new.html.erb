<div class="row reg-style">
  
  <div class="container" style="max-width: 360px;">

    <div  class="panel panel-primary" id="devise">
      <div class="panel-body">
       <h3 class="user-reg-log-head">Create your account </h3>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
            <%= f.input :email, required: true, input_html: {class: 'devise-input'}, label: false, autofocus: true ,placeholder: 'Enter email*'%>

          <%= f.input :password, required: true,  label: false, input_html: {class: 'devise-input'},hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),placeholder: 'Enter password*' %>
          <%= f.input :password_confirmation,  label: false, input_html: {class: 'devise-input'},required: true ,placeholder: 'Confirm Password*'%>
        </div>
        <br>
        <div class="form-actions">
          <%= f.button :submit,  "Sign up" ,:class => " reg-btn"%>
          <p><b>Or</b>&nbsp  <%= link_to "Log in", new_session_path(resource_name) ,class: 'devise-link' %></p>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
