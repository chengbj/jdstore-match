<div class="row display-page">

	<div class="row" id="search-title">
	<h2>Search</h2>
	<br>
	<br>
	<div></div>
	<div class="col-md-6" id="search-key "><p>Search results for &quot;<b><%= @query_string%></b>&quot; </p></div>
	<div class="col-md-6"> <b><%= @products.count %></b>   results found</div>

	</div>
	

	<% @products.each do |product| %>

	<div class="row" id="search-item">

		<%= render partial: "product_item_search", locals: { product:product,:query_string=>@query_string} %>

	</div>
	<% end %>
	<div class="row pull-right">
		<%= will_paginate @products ,class:"apple_pagination" %>
	</div>

	
</div>